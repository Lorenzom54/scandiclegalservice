---
import LanguageSelector from './LanguageSelector.astro';
---

<header class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-b border-gray-200 z-40">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="#home" class="flex items-center space-x-2">
          <div class="w-10 h-10 rounded-md flex items-center justify-center">
           <img src="/logo.png" alt="">
          </div>
          <div class="hidden sm:block">
            <span class="text-xl font-bold text-dark">Scandic Legal</span>
            <div class="text-xs text-gray-600">Service</div>
          </div>
        </a>
      </div>
      
      <!-- Navigation - Hidden on mobile, visible on desktop -->
      <nav class="hidden md:flex space-x-8">
        <a href="#services" class="nav-link text-dark hover:text-primary transition-colors" data-i18n="nav.services">Servicios</a>
        <a href="#about" class="nav-link text-dark hover:text-primary transition-colors" data-i18n="nav.about">Nosotros</a>
        <a href="#pricing" class="nav-link text-dark hover:text-primary transition-colors" data-i18n="nav.pricing">Precios</a>
      </nav>
      
      <!-- Contact Button and Language Selector -->
      <div class="flex items-center space-x-4">
        <a 
          href="https://cloud-s23.mnprogram.net/Index.aspx?frm=DAF6F06B-7DA0-49A9-B613-887B49F5B84B" 
          target="_blank"
          class="bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-lg font-semibold text-sm transition-all duration-300 transform hover:scale-105 shadow-lg"
        >
          <span data-i18n="hero.contactBtn">Contactar</span>
        </a>
        <LanguageSelector />
      </div>
    </div>
  </div>
</header>

<style>
  .nav-link {
    position: relative;
    font-weight: 500;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #740530;
    transition: width 0.3s ease;
  }
  
  .nav-link:hover::after {
    width: 100%;
  }
</style>

<script>
  // Smooth scrolling for navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        const headerOffset = 80;
        const elementPosition = target.getBoundingClientRect().top;
        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

        window.scrollTo({
          top: offsetPosition,
          behavior: 'smooth'
        });
      }
    });
  });
</script>