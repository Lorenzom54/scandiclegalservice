<section id="pricing" class="py-20 bg-secondary">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 animate-slide-up">
      <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">
        <span data-i18n="pricing.title">Precios</span>
      </h2>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Hourly Rate -->
      <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all duration-300">
        <div class="text-center">
          <h3 class="text-xl font-bold text-dark mb-4" data-i18n="pricing.hourly">Tarifa por hora</h3>
          <div class="text-4xl font-bold text-primary mb-4" data-i18n="pricing.hourlyPrice">100€ + IVA</div>
          <div class="w-16 h-1 bg-primary mx-auto rounded"></div>
        </div>
      </div>
      
      <!-- Fixed Services -->
      <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all duration-300">
        <h3 class="text-xl font-bold text-dark mb-2" data-i18n="pricing.services">Servicios con tarifa fija</h3>
        <p class="text-sm text-gray-600 mb-6" data-i18n="pricing.servicesNote">Así sabes cuánto te costará tu trámite antes de empezar.</p>
        <ul class="space-y-4">
          <li class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-700" data-i18n="pricing.servicesList.0">Testamentos: desde 200€</span>
          </li>
          <li class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-700" data-i18n="pricing.servicesList.1">Declaración no residentes: 150€</span>
          </li>
          <li class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-700" data-i18n="pricing.servicesList.2">Tramitación NIE: 100€</span>
          </li>
          <li class="flex justify-between items-center py-2">
            <span class="text-gray-700" data-i18n="pricing.servicesList.3">Poderes notariales: 80€</span>
          </li>
        </ul>
      </div>
    </div>
    

  </div>
</section>
