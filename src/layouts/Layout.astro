---
export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Scandic Legal Service - Abogados Noruegos en España", 
  description = "Despacho jurídico especializado en asesoría legal para extranjeros. Expertos en herencias, propiedades e impuestos para no residentes. Más de 10 años de experiencia." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-Z4HQG372DG"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-Z4HQG372DG');
</script>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicon - Multiple formats for maximum compatibility -->
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="msapplication-TileImage" content="/favicon-32x32.png" />
    <meta name="theme-color" content="#740530" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="keywords" content="abogado noruego españa, asesoría internacional torrevieja, herencias extranjeros, impuestos no residentes, nie españa, derecho inmobiliario internacional" />
    <meta name="author" content="Scandic Legal Service" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og-image.jpg" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LegalService",
      "name": "Scandic Legal Service S.L.",
      "description": "Despacho jurídico especializado en asesoría legal para extranjeros en España",
      "url": "https://scandic-legal.com",
      "telephone": "+34966 92 23 32",
      "email": "post@scandiclegalservice.com",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "C. Ramón Gallud, nº 130, Local 1B",
        "addressLocality": "Torrevieja",
        "addressRegion": "Alicante",
        "postalCode": "03181",
        "addressCountry": "ES"
      },
      "founder": {
        "@type": "Person",
        "name": "Arne Herman Kilde Larsen",
        "jobTitle": "Abogado"
      },
      "areaServed": ["Spain", "Norway"],
      "serviceType": ["Legal Services", "Tax Law", "Real Estate Law", "Inheritance Law"]
    }
    </script>
  </head>
  
  <body class="font-sans antialiased">
    <slot />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
    line-height: 1.6;
  }
  
  * {
    box-sizing: border-box;
  }
  
  .animate-fade-in {
    animation: fadeIn 0.8s ease-in-out;
  }
  
  .animate-slide-up {
    animation: slideUp 0.6s ease-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Smooth scrolling offset for fixed header */
  section {
    scroll-margin-top: 80px;
  }
</style>
